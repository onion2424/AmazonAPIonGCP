{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\EntryPoint\\Observer\\index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            // https://github.com/winstonjs/winston/issues/1544
            "outputCapture": "std",
            // https://qiita.com/fsd_maclala/items/8f8bcd168e70ce0ab59c
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        }
    ]
}